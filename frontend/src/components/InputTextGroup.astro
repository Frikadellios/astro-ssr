---
export interface Props {
  title: string;
  name: string;
  required?: boolean;
  placeholder?: string;
}
const {
  title,
  name,
  placeholder = "",
  required = false,
} = Astro.props as Props;
---

<div class="mb-10 fv-row fv-plugins-icon-container">
  <label for={name} class={`${required && "required"} form-label`}>{title}</label>
  <input
    id={name}
    type="text"
    name={name}
    class="form-control mb-2"
    placeholder={placeholder}
  />
</div>